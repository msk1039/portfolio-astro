---
import BlogCard from '@/components/BlogCard.astro'
import Container from '@/components/Container.astro'
import Link from '@/components/Link.astro'
import { buttonVariants } from '@/components/ui/button'
import {
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
} from '@/components/ui/card'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getCollection } from 'astro:content'

const blog = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE)
---

<Layout title="Home" description={SITE.DESCRIPTION}>
  <Container class="px-8 md:px-12 py-12 max-w-7xl mx-auto">
    <section class="scroll-mt-4">
      <div class="flex flex-col md:flex-row justify-between items-start mb-8 gap-4" data-animate data-delay="0">
        <div>
          <p class="text-3xl md:text-4xl lg:text-5xl tracking-tighter font-['Augillion'] text-slate-900" data-animate data-delay="0.5">
            Mayank
          </p>
          <p class="text-sm md:text-base text-zinc-500 mt-4" data-animate data-delay="1">
            <span class="font-satoshi text-base font-medium text-slate-800">Programmer</span>
            <span class="font-black px-2">·</span>
            <span class="font-satoshi text-base font-medium text-slate-800">Designer</span>
            <span class="font-black px-2">·</span>
            <span class="font-satoshi text-base font-medium text-slate-800">Artist</span>
          </p>
        </div>
      </div>
      
      <Card className="bg-white border-1 border-solid rounded-3xl md:border-r md:border-zinc-300 shadow-sm" data-animate data-delay="1.2">
        <CardHeader className="p-8">
          <CardTitle
            className="text-2xl font-medium text-black"
            data-animate data-delay="1.4"
            >About Me</CardTitle
          >
          <CardDescription className="text-zinc-500 mt-2"
            data-animate data-delay="1.6"
            >IT student and creative technologist</CardDescription
          >
        </CardHeader>
        <CardContent className="p-8 pt-0 ">
          <p class="mb-6 font-satoshi text-lg leading-[26px] text-black font-normal" data-animate data-delay="1.8">
            I'm Mayank, a 19 yo IT student, a programmer, designer, and artist
            who loves creating cool and meaningful projects. I'm always
            experimenting, whether it's building web apps, designing
            sleek interfaces, or diving into low-level systems. You'll
            often find me working on side projects, participating in hackathons,
            or just exploring something fun and challenging.
          </p>
          <p class="mb-8 font-satoshi text-lg leading-[26px] text-black font-normal" data-animate data-delay="2">
            If you're into building awesome stuff too, or just want to chat about tech, design,
            or anything creative, feel free to reach out!
          </p>
          <div class="mt-6 flex flex-wrap gap-3" >
            <a href="#contact" class="rounded-full px-4 border py-2 text-sm font-semibold transition-all flex items-center justify-between bg-white text-zinc-500 h-10 border-zinc-300 hover:bg-black hover:text-white duration-300" data-animate data-delay="2.2">
              Get In Touch <span class="ml-2">&rarr;</span>
            </a>
            <a href="/projects" class="rounded-full px-4 border py-2 text-sm font-semibold transition-all flex items-center justify-between bg-white text-zinc-500 h-10 border-zinc-300 hover:bg-black hover:text-white duration-300" data-animate data-delay="2.2">
              View Projects <span class="ml-2">&rarr;</span>
            </a>
          </div>
          
          <div class="mt-10 rounded-2xl overflow-hidden border border-zinc-200" data-animate data-delay="2.4">
            <img
              src="/cat-image.png"
              alt="cat image"
              class="w-full object-cover"
            />
          </div>
        </CardContent>
      </Card>
    </section>
    
